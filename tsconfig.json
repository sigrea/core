{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"types": ["node"]
	},
	"include": ["index.ts", "packages/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
