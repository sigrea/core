{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noConfusingVoidType": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
		"ignore": ["packages/**/dist/**", "packages/**/coverage/**"]
	}
}
